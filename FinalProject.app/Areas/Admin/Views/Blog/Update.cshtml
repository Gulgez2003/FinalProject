@model BlogUpdateDto

@{
    ViewData["Title"] = "Update";
}

<div class="conatiner-fluid content-inner mt-5 py-0">
    <div class="header-title">
        <h4 class="card-title">Update Blog</h4>
    </div>
    <hr />
    <div>
        <div class="bd-example">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.blogGetDto.Id" />
                <div class="mb-3">
                    <label asp-for="@Model.blogPostDto.Name" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="@Model.blogPostDto.Name" value="@Model.blogGetDto.Name">
                    <span asp-validation-for="@Model.blogPostDto.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.blogPostDto.Description" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="@Model.blogPostDto.Description" value="@Model.blogGetDto.Description">
                    <span asp-validation-for="@Model.blogPostDto.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.blogPostDto.DateTime" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="@Model.blogPostDto.DateTime" value="@Model.blogGetDto.DateTime">
                    <span asp-validation-for="@Model.blogPostDto.DateTime" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Upload File</label>
                    <input type="file" class="form-control" accept="image/*" asp-for="@Model.blogPostDto.File" value="@Model.blogGetDto.ImageName">
                    <span asp-validation-for="@Model.blogPostDto.File" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button asp-controller="Blog" asp-action="Index" class="btn btn-light">Back to List</button>
            </form>
        </div>
    </div>
</div>

