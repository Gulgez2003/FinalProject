@model BlogPostDto

@{
    ViewData["Title"] = "Create";
}

<div class="conatiner-fluid content-inner mt-5 py-0">
    <div class="header-title">
        <h4 class="card-title">Create Blog</h4>
    </div>
    <hr />
    <div>
        <div class="bd-example">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Description" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="@Model.Description">
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.DateTime" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="@Model.DateTime">
                    <span asp-validation-for="@Model.DateTime" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Upload File</label>
                    <input type="file" class="form-control" accept="image/*" asp-for="@Model.File">
                    <span asp-validation-for="@Model.File" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button asp-controller="Blog" asp-action="Index" class="btn btn-light">Back to List</button>
            </form>
        </div>
    </div>
</div>
