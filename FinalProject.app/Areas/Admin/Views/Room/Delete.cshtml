@model RoomGetDto

@{
    ViewData["Title"] = "Delete";
}
<div class="conatiner-fluid content-inner mt-5 py-0">
    <div>
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Room</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Id:
                </dt>
                <dd class="col-sm-10">
                    @Model.Id
                </dd>
                <dt class="col-sm-2">
                    Title:
                </dt>
                <dd class="col-sm-10">
                    @Model.Title
                </dd>
                 <dt class="col-sm-2">
                    Price:
                </dt>
                <dd class="col-sm-10">
                    @Model.Price
                </dd>
                 <dt class="col-sm-2">
                    Size:
                </dt>
                <dd class="col-sm-10">
                    @Model.Size
                </dd>
                 <dt class="col-sm-2">
                    Capacity:
                </dt>
                <dd class="col-sm-10">
                    @Model.Capacity
                </dd>
                 <dt class="col-sm-2">
                    Bed Type:
                </dt>
                <dd class="col-sm-10">
                    @Model.BedType
                </dd>
                 <dt class="col-sm-2">
                    Services:
                </dt>
                <dd class="col-sm-10">
                    @Model.Services
                </dd>
                <dt class="col-sm-2">
                    Description:
                </dt>
                <dd class="col-sm-10">
                    @Model.Description
                </dd>
                <dt class="col-sm-2">
                    Image:
                </dt>
                <dd class="col-sm-10">
                    <img class="bg-soft-primary rounded img-fluid avatar-40 me-3" src="~/assets/img/@Model.ImageName">
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>

